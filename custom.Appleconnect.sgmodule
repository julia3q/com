#!name=custom.Appleconnect
#!desc=測試中-優先判斷 Apple.Service。2024.12.29
#!category=Apple
#!arguments = ConnectDefault:"🍎 Apple",ConnectUS:"美國",ConnectLowSpeed:"🚗 低速"
#!arguments-desc = ConnectDefault: 🍎 Apple \n ConnectUS: 美國  \nConnectLowSpeed:🚗 低速

[Rule]
# > --- Apple.Service Rule Start --
DOMAIN,tether.edge.apple,REJECT,pre-matching,extended-matching

# Apple Intelligence
DOMAIN-SUFFIX,apple-relay.cloudflare.com,"{{{ConnectUS}}}",extended-matching
DOMAIN-SUFFIX,apple-relay.apple.com,"{{{ConnectUS}}}",extended-matching

# macOS 緩存
# DOMAIN,xp.apple.com,"{{{ConnectDefault}}}",extended-matching
DOMAIN,iadsdk.apple.com,"{{{ConnectDefault}}}",extended-matching
DOMAIN,metrics.icloud.com,"{{{ConnectDefault}}}",extended-matching

RULE-SET,https://ruleset.skk.moe/List/non_ip/apple_cn.conf,DIRECT
RULE-SET,https://raw.githubusercontent.com/julia3q/Surge/main/List/AppleStore.list,"{{{ConnectLowSpeed}}}"
RULE-SET,https://raw.githubusercontent.com/julia3q/Surge/main/List/AppleStream.list,"{{{ConnectLowSpeed}}}"
RULE-SET,https://raw.githubusercontent.com/julia3q/Surge/main/List/AppleProxy.list,"{{{ConnectDefault}}}"